	      - mariadb	
	    restart: unless-stopped	
	  mariadb:	
	    image: ghcr.io/linuxserver/mariadb	
	    container_name: mariadb	
	    environment:	
	      - PUID=1000	
	      - PGID=100	
	      - MYSQL_ROOT_PASSWORD=3223	
	      - TZ=America/Sao_Paulo	
	    volumes:	
	      - mariadb_data:/config	
	    restart: unless-stopped	
	  letsencrypt:	
	    image: linuxserver/letsencrypt	
	    container_name: letsencrypt	
	    cap_add:	
	      - NET_ADMIN	
	    environment:	
	      - PUID=1000	
	      - PGID=100	
	      - TZ=America/Sao_Paulo	
