version: "2"	
	services:	
	  nextcloud:	
	    image: linuxserver/nextcloud	
	    container_name: nextcloud	
	    environment:	
	      - PUID=1000	
	      - PGID=100	
	      - TZ=America/Sao_Paulo	
	    volumes:	
	      - I:\Fabricio\Docker\NextCloud\config\:/config	
	      - I:\Fabricio\Docker\NextCloud\data\:/data	
